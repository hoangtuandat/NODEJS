<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: #dddddd;
        }
        .edit {
          background: orange;
          border: none;
          outline: none;
          padding: 5px 10px;
          border-radius: 3px;
          cursor: pointer;
          text-decoration: none;
        }
        .delete {
          background: red;
          border: none;
          outline: none;
          padding: 5px 10px;
          border-radius: 3px;
          cursor: pointer;
          text-decoration: none;
        }
        </style>
    <title>Document</title>
</head>
<body>
    <table>
        <tr>
          <th>Email</th>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Address</th>
          <th>Action</th>
        </tr>
        
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td>
                <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button" class="edit">Edit</a>
                <a type="button" class="delete">Delete</a>
              </td>
            </tr>
         <% } %>
        
        
      </table>
</body>
</html>